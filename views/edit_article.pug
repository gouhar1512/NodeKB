extends layout
block content
   link(rel='stylesheet' href='../../styles.css')
   form(method='POST', action='/article/edit/'+article._id, autocomplete='off')
      #form-group
         label Title:
         input.form-control(name='title', type='text' value=article.title)
      #form-group
         label Author:
         input.form-control(name='author', type='text' value=article.author)
      #form-group
         label Body:
         textarea.form-control(name='body')= article.body
      br
      input.btn(type='submit', value='Submit')
   br
   a(href='/') Show Articles